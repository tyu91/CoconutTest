<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calendarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/calendar_test_activity" />

    <Button
        android:id="@+id/contactsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_test_activity"
        android:layout_below="@id/calendarBtn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/smsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_test_activity"
        android:layout_below="@id/contactsBtn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/callLogsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calllogs_test_activity"
        android:layout_below="@id/smsBtn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/mediaRecorderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_recorder_test_activity"
        android:layout_below="@id/callLogsBtn"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>