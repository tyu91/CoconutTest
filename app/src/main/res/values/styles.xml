<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->

    <style name="divider" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#d2d2d2</item>
    </style>

    <style name="allysiqi_text_dark" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="allysiqi_text_dark_bold" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="allysiqi_subtext_dark" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="allysiqi_text_medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="allysiqi_subtext_medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="allysiqi_text_light" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c8c8c8</item>
    </style>

    <style name="allysiqi_subtext_light" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c8c8c8</item>
    </style>

    <style name="allysiqi_SectionTitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="allysiqi_SectionDescription" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="allysiqi_ViewAll" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1b6cd2</item>
    </style>

    <style name="allysiqi_all_apps_section_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="allysiqi_main_title" parent="allysiqi_SectionTitle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="allysiqi_main_description" parent="allysiqi_SectionDescription">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="allysiqi_add_setting_section_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="allysiqi_add_setting_section_desc" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="allysiqi_add_setting_spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="allysiqi_notification_title" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="allysiqi_notification_description" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="allysiqi_notification_app_icon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


</resources>
